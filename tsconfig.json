{
    "compilerOptions": {
        "target": "ES6",
        "module": "ES6",
        "lib": ["ES6", "dom"],
        "allowJs": true,
        "outDir": "dist",
        "rootDir": "src",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "typeRoots": ["./types", "./node_modules/@types"]
    },
    "include": ["src/**/*", "types/**/*"],
    "exclude": ["node_modules"]
}
